class Node{
    int value;
    Node next = null;
    public Node(int value){
        this.value = value;
    }
}
public class DeleteValue{
    //删除值是val的结点
    public static Node deleteValue(int val, Node head){
        Node cur = head;
        Node pre = head;
        while (cur != null){
            if(cur.value == val){
                if(cur == head){
                    head = head.next;
                } else {
                    pre.next = cur.next;
                }
            }
            pre = cur;
            cur = cur.next;
        }
        return head;
    }

    public static void main(String[] args){
          Node n1 = new Node(1);
          Node n2 = new Node(2);
          Node n3 = new Node(3);
          Node n4 = new Node(12);
          Node n5 = new Node(1);
          Node n6 = new Node(15);

          n1.next = n2;
          n2.next = n3;
          n3.next = n4;
          n4.next = n5;
          n5.next = n6;
          Node head = n1;
          while(head != null){
              System.out.println(head.value);
              head = head.next;
          }
        System.out.println(" ");
          Node nhead = deleteValue(1,n1);
          while(nhead != null){
            System.out.println(nhead.value);
            nhead = nhead.next;
        }
    }
}
